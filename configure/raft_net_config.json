{
    "name": "BASE_RAFT_NET",
    "path": "/mnt/data/workspace/github/realtime_stereo_matcher/experiments/BASE_RAFT_NET",
    "train": {
        "batch_size": 6,
        "restore_checkpoint": "",
        "save_checkpoint_frequency": 10000,
        "datasets": [
            "middlebury_2014",
            "eth3d",
            "sceneflow/things",
            "sceneflow/driving",
            "kitti"
        ],
        "learn_rate": 0.0002,
        "num_of_steps": 100000,
        "weight_decay": 0.00001,
        "loss": {
            "type": "SequenceLoss",
            "parameters": {
                "loss_gamma": 0.9,
                "max_flow_magnitude": 700
            }
        }
    },
    "test": {
        "datasets": [
            "middlebury_Q",
            "eth3d"
        ]
    },
    "model": {
        "type": "MobileRaftNet",
        "parameters": {
            "in_dim": 3,
            "hidden_dims": [
                32,
                48,
                64,
                96,
                128
            ],
            "down_factor": 2,
            "norm_fn": "batch",
            "num_groups": 8
        }
    },
    "data": {
        "image_size": [
            240,
            320
        ],
        "image_gamma": [],
        "spatial_scale": [
            -0.2,
            0.4
        ],
        "saturation_range": [
            0,
            1.4
        ],
        "do_flip": false,
        "no_y_jitter": false
    }
}