{
    "name": "BASE_RAFT_NET",
    "path": "/mnt/data/workspace/github/realtime_stereo_matcher/experiments/BASE_RAFT_NET",
    "train": {
        "batch_size": 8,
        "restore_checkpoint": "",
        "save_checkpoint_frequency": 10000,
        "datasets": [
            "middlebury_2014",
            "eth3d",
            "sceneflow/things",
            "sceneflow/driving",
            "kitti"
        ],
        "learn_rate": 0.0002,
        "num_of_steps": 100000,
        "weight_decay": 0.00001
    },
    "test": {
        "datasets": [
            "middlebury_Q",
            "eth3d"
        ]
    },
    "model": {
        "type": "MobileRaftNet",
        "parameters": {
            "hidden_dim": 64,
            "encode_block": "mobilev2",
            "down_factor": 2,
            "cost_factor": 3,
            "cost_radius": 4,
            "max_disparity": 128,
            "mixed_precision": true
        }
    },
    "data": {
        "image_size": [
            240,
            320
        ],
        "image_gamma": [],
        "spatial_scale": [
            -0.2,
            0.4
        ],
        "saturation_range": [
            0,
            1.4
        ],
        "do_flip": false,
        "no_y_jitter": false
    }
}